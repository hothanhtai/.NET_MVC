@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Cập nhật phân quyền";
}



    <!-- Left navbar links -->

    @section naviheader{
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/admin/home" class="nav-link"><i class='fas fa-house-user'></i> Trang chủ</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/admin/role" class="nav-link"><i class="fa fa-vcard"></i> Danh sách phân quyền</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link"><i class='fas fa-edit'></i> Cập nhật</a>
            </li>
        </ul>
    }



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật phân quyền</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Phân quyền</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật phân quyền</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { }))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label>Tên quyền</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <a href="/admin/role" class="btn btn-danger"><i class='fas fa-angle-double-left'></i> Trở lại</a>
                    <button type="submit" class="btn btn-success"> <i class='fas fa-vote-yea'></i>Lưu</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<!-- /.content-wrapper -->
