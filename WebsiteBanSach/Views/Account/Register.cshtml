@model WebsiteBanSach.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<style>
    .formLogin {
        background-image: url("https://www.studytienganh.vn/upload/2021/03/93941.jpg");
        background-attachment: fixed;
    }

    .containLogin {
        background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,0.8) 50%, rgba(252,176,69,1) 100%);
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container formLogin" style="margin-top:160px">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-5 containLogin">
            <h2 class="text-center" style="font-weight:bolder">@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Tạo một tài khoản mới</h4>
                <hr />
                @Html.ValidationSummary(true,"", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-warning" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-success" value="Đăng ký" />
                    </div>
                </div>
                <p class="text-light" style="font-weight:bolder"> @Html.ActionLink("Bạn đã có tài khoản?", "Login")</p>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
